server 
{
	listen 7070;
	error_pages 404 ./rlejizetj;
	error_pages 304 ./rlejizetj;
	error_pages 407 ./rlejizetj;

	location / 
	{
		allow GET POST DELETE;
		root ./bsavinel/site/;
		index index.html;
		cgi_pass .php ./www/bin/php-cgi;
		autoindex on;
	}

	location /methode/
	{
		allow GET POST DELETE;
		root ./bsavinel/site/methode/;
		cgi_pass .php ./www/bin/php-cgi;
		autoindex on;
	}

	location /methode/test/
	{
		allow GET POST DELETE;
		root ./bsavinel/site/methode/test/;
		cgi_pass .php ./www/bin/php-cgi;
		autoindex on;
		return 606 /error/403.html
	}

}
