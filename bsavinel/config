server 
{
	listen 8080;
	error_pages 404 ./bsavinel/site/404.html; #testduntrucquimarchepas

	location / 
	{
		allow GET POST DELETE;
		root ./bsavinel/site/;
		index index.html;
		#testduntrucquimarchepas
		cgi_pass .php /usr/bin/php-cgi;
		autoindex on;
		#return  404 ./bsavinel/site/404.html;
		upload_store ./bsavinel/site/uploads/;
	}

	location /methode/
	{
		allow GET POST DELETE;
		root ./bsavinel/site/methode/;
		cgi_pass .php  /usr/bin/php-cgi;
		autoindex on;
		upload_store ./bsavinel/site/uploads/;
	}
}
