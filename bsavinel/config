server 
{
	listen 8080;

	location / 
	{
		allow GET POST DELETE;
		root ./bsavinel/site/;
		index index.html;
		cgi_pass .php ./www/bin/php-cgi;
		autoindex on;
	}

	location /methode/
	{
		allow GET POST DELETE;
		root ./bsavinel/site/methode/;
		cgi_pass .test ./www/bin/test_cgi;
		autoindex on;
	}

	location /methode/test/
	{
		allow GET POST DELETE;
		root ./bsavinel/site/methode/test/;
		cgi_pass .php ./www/bin/php-cgi;
		autoindex on;
		return 403 /error/403.html
	}

}
