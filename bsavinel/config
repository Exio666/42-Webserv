server 
{
	listen 8080;

	location / 
	{
		allow GET POST DELETE;
		root bsavinel/site/;
		autoindex on;
		upload_store bsavinel/site/uploads/;
	}

	location /methode/
	{
		index index.html;
		allow GET POST DELETE;
		root ./bsavinel/site/;
		autoindex on;
		upload_store bsavinel/site/uploads/;
	}

	location /methode/test/
	{
		allow GET POST DELETE;
		root ./bsavinel/site/;
		autoindex on;
		return 403 /error/403.html
		upload_store bsavinel/site/uploads/;
	}

}