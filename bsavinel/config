server 
{
	listen 8080;
	error_pages 404 ./bsavinel/site/404.html;

	location / 
	{
		allow GET POST DELETE;
		root ./bsavinel/site/;
		index index.html;
		cgi_pass .php /usr/bin/php-cgi;
		autoindex on;
	}

	location /methode/
	{
		allow GET POST DELETE;
		root ./bsavinel/site/methode/;
		cgi_pass .php  /usr/bin/php-cgi;
		autoindex on;
	}

	location /methode/test/
	{
		allow GET POST DELETE;
		root ./bsavinel/site/methode/test/;
		cgi_pass .php  /usr/bin/php-cgi;
		autoindex on;
	}

}
