server 
{
	listen 8080;

	location / 
	{
		allow GET POST DELETE;
		root ./bsavinel/site/;
		autoindex on;
	}

	location /methode
	{
		index index.html;
		allow GET POST DELETE;
		root ./bsavinel/site/;
		cgi_pass .php ./www/bin/php-cgi;
		autoindex on;
	}

	location /methode/test/
	{
		allow GET POST DELETE;
		root ./bsavinel/site/;
		autoindex on;
		return 403 /error/403.html
	}

}
